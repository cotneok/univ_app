<div class="row">
  <div class="col s12">
    <h3 class="center-align">Course Listing</h3>
  </div>
</div>

  <div class="row">
    <% Course.all.each do |course| %>
      <div class="col s6 m6">
        <div class="card">
          <div class="card-image">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSmrpFGjR7M0tO2KmlY08TL4Ln289BViDmVi8Nf4ue-AkKdv8399A">
            <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
          </div>
          <div class="card-content">
            <p><%= course.description %></p>
          </div>
          <div class="card-action">
            <a href="#">Enroll</a>
            <a href="#">Info</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
